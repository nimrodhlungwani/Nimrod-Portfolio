@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="contact" class="contact section py-5">

    <h1 class="text-center fw-bold section-title mb-4 text-danger">Contact</h1>

    <div class="container">

        <div class="row g-4 g-lg-5">
            <div class="col-lg-5">
                <div class="info-box p-5 w-100 h-100 d-flex flex-column justify-content-between align-content-center" style="background-color: #ececec; border-radius: 1rem; color: #310606;">

                    <div class="text-center">
                        <div>
                            <i class="fa-solid fa-location-dot fa-2x"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">Our Location</h5>
                            <p class="m-0">Tantabela Street</p>
                            <p class="m-0">Soshanguve South Ext 10</p>
                            <p class="m-0">Pretoria</p>
                            <p class="m-0">0152</p>
                        </div>
                    </div>

                    <div class="text-center">
                        <div>
                            <i class="fa-solid fa-phone-volume fa-2x"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">Phone Number</h5>
                            <p class="m-0">+12 60 617 2494</p>
                        </div>
                    </div>

                    <div class="text-center mb-4">
                        <div>
                            <i class="fa-solid fa-envelopes-bulk fa-2x"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">Email Address</h5>
                            <p class="m-0">hlungwaninimrod@gmail.com</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="w-100 h-100 p-5" style="background-color: #232323; border-radius: 1rem;">

                    <h3 class="text-center mb-4 fw-bolder">Get In Touch</h3>

                    <form action="" method="post" class="contact-form row gy-4" id="contact-form" aria-label="Contact form" data-status="init" novalidate>
                        <div class="col-md-6">
                            <input type="text" name="name" class="form-control" placeholder="Your Name" required="">
                        </div>

                        <div class="col-md-6 ">
                            <input type="email" name="email" class="form-control" placeholder="Your Email" required="">
                        </div>

                        <div class="col-12">
                            <input type="text" class="form-control" name="contact" placeholder="Contact" required="">
                        </div>

                        <div class="col-12">
                            <input type="text" class="form-control" name="subject" placeholder="Subject" required="">
                        </div>

                        <div class="col-12">
                            <textarea class="form-control" name="message" rows="6" placeholder="Message" required=""></textarea>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="button" class="btn btn-danger fw-bolder">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>